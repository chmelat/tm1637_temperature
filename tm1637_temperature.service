[Unit]
Description=TM1637 Temperature Display Service
After=multi-user.target
StartLimitIntervalSec=86400
StartLimitBurst=2

[Service]
Type=simple
ExecStart=/usr/local/bin/tm1637_temperature -i 60
Restart=always
RestartSec=600
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
